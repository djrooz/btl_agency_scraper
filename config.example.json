{
  "scrapers": {
    "rrar": {
      "base_url": "https://www.alladvertising.ru/",
      "categories": [
        "top/btl/",
        "top/gifts/",
        "top100/",
        "top/event/"
      ],
      "delay": 1,
      "max_retries": 3
    },
    "marketing_tech": {
      "base_url": "https://marketing-tech.ru/",
      "endpoints": {
        "btl": "company_tags/btl/",
        "marketing": "company_tags/marketing/",
        "advertising": "company_tags/advertising/"
      },
      "delay": 2,
      "max_retries": 3
    },
    "fns_api": {
      "base_url": "https://api-fns.ru/api/",
      "endpoints": {
        "search": "search",
        "egr": "egr"
      },
      "api_key": "your_api_key_here",
      "rate_limit": 10,
      "delay": 1
    },
    "list_org": {
      "base_url": "https://www.list-org.com/",
      "okved_codes": [
        "73.11",
        "82.30",
        "47.78.3",
        "73.20",
        "82.99"
      ],
      "delay": 2,
      "max_retries": 3
    }
  },
  "filters": {
    "min_revenue": 200000000,
    "country": "RU",
    "revenue_years": [2022, 2023, 2024]
  },
  "llm": {
    "provider": "anthropic",
    "model": "claude-3-haiku-20240307",
    "api_key": "your_llm_api_key_here",
    "max_tokens": 1000,
    "temperature": 0.1
  },
  "output": {
    "csv_file": "data/companies.csv",
    "raw_data_dir": "data/raw/",
    "interim_data_dir": "data/interim/"
  },
  "logging": {
    "level": "INFO",
    "file": "logs/scraper.log",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}
